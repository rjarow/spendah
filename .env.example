# App
APP_NAME=Spendah

# Database
DATABASE_URL=sqlite:///./data/db.sqlite

# Import paths
IMPORT_INBOX_PATH=./data/imports/inbox
IMPORT_PROCESSED_PATH=./data/imports/processed
IMPORT_FAILED_PATH=./data/imports/failed

# AI Provider
AI_PROVIDER=openrouter
AI_MODEL=anthropic/claude-3-haiku

# For Ollama (local)
# AI_PROVIDER=ollama
# AI_MODEL=llama3.1:8b
# AI_BASE_URL=http://localhost:11434

# API Keys (set one for your provider)
OPENROUTER_API_KEY=
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Server Ports (change if defaults conflict with other services)
# These affect docker-compose port mappings and frontend API connection
API_PORT=8000
FRONTEND_PORT=5173
